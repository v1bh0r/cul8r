<p>

<div class="row-fluid">
  <div class='span3'>
    <%= image_tag(movie.poster_detailed) %>
    <div style="margin-top:10px; text-align: center">
      <%= render :partial => 'movie_action_buttons', :locals => {:movie => movie, :button_size => 'btn-large', :show_trailer => true} %>
    </div>
  </div>
  <div class="<%= content_size %>">
    <% if movie.critics_rating %>
        <span class="label label-info">Verdict: <%= movie.critics_rating %></span>
        <span class="label label-info">Rating: <%= movie.critics_score %>/100</span>
        <% if movie.release_dates? %>
            <span class="label label-info">Release: <%= movie.release_dates %></span>
        <% end %>
    <% end %>
    <p>
      <%= movie.synopsis %>
    </p>
    <h4>Starring</h4>
    <% unless movie.abridged_cast.empty? %>
        <ul class='unstyled'>
          <% movie.abridged_cast.each do |actor| %>
              <li>
                <h6><%= actor['name'] -%></h6>
              </li>
          <% end %>
        </ul>
    <% end %>
  </div>
</div>
</p>